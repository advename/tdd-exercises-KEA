{
  "name": "test-driven-dev",
  "version": "0.0.0",
  "scripts": {
    "script": "node --experimental-modules --es-module-specifier-resolution=node",
    "test": "jest",
    "coverage": "jest --coverage --passWithNoTests"
  },
  "devDependencies": {
    "jest": "^27.3.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  },
  "type": "module"
}
